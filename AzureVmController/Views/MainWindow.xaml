<Window x:Class="Com.revo.AzureVmController.Views.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		mc:Ignorable="d"
		Title="Azure VM controller" Height="350" Width="525" Icon="../cloud.ico" ShowInTaskbar="False" Topmost="True" WindowStyle="None" ResizeMode="NoResize">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<ListView Grid.Row="0"  Background="Black"></ListView>
		<StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
		<Button Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="Settings_Clicked" Margin="2,2,2,2">Settings...</Button>
		<Button Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="Exit_Clicked" Margin="2,2,2,2">Exit</Button>
		</StackPanel>
	</Grid>
</Window>
